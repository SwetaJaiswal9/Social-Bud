<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

<div id="layout-header">
  <nav>
    <div class="mini-logo">
      <a href="/">Social Bud</a>
    </div>
    <div class="auth-links">
      <ul>
        <% if (!locals.user) { %> 
          <li><a href="/users/sign-in" class="btn-sign-in">Sign In</a></li>
          <li><a href="/users/sign-up" class="btn-sign-up">Sign Up</a></li>
        <% } else { %> 
          <li>
            <a href="/users/profile" class="btn-auth-user">
              <% if (locals.user.avatar) { %>
                <img src="<%= locals.user.avatar %>" alt="User Avatar" class="user-icon" />
              <% } else { %>
                <i class="fas fa-user-circle user-icon"></i>
              <% } %>
              <%= locals.user.name %>
            </a>
          </li>
          <li><a href="/users/sign-out" class="btn-sign-out">Sign Out</a></li>
        <% } %>
      </ul>
    </div>
  </nav>
</div>
